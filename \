import React, { Component, useEffect, useState } from "react";
import dynamic from "next/dynamic";
import axios from "axios";

const Chart = dynamic(() => import("react-apexcharts"), { ssr: false });

export default function Candlestick() {
	const [ChartData, setChartData] = useState([
	]);
	const options = {};
	useEffect(() => {
		axios
			.get(
				`https://www.alphavantage.co/query?function=TIME_SERIES_DAILY&symbol=infy.BSE&outputsize=full&apikey=0552VY0S1GNSVOZF`
			)
			.then((res) => {
				console.log(res);
				const data = res.data["Time Series (Daily)"];
				const plotKeys = Object.keys(data).slice(100);
				const plotValues = Object.values(data).slice(100);

				console.log(plotKeys)
				console.log(plotValues)

				let chartData = [];
				for (const item in data) {
					let tempData = { x: new Date(item), y: [] };

					for (const value in data[item]) {
						if (value !== "5. volume") {
							tempData.y.push(data[item][value]);
						}
					}
					chartData.push(tempData);
				}
				console.log(chartData);
				setChartData(chartData);
			});
	}, []);

	return (
		<div className="mixed-chart">
			{typeof window !== "undefined" && ChartData.length > 0 && (
				<Chart
					options={options}
					series={ChartData}
					type="candlestick"
					width={500}
					height={320}
				/>
			)}
		</div>
	);
}
